 {# <pre>{{dump()}}</pre>  #}
<div>
  <h1 class="c-big-title">{{wp_title}}</h1>
</div>

<div class="p-school__section">
  <div class="c-main-attributes">
      <div class="row">
        	<div class="col-md-2">
            <i class="c-attribute-icons fa fa-university fa-2x"></i>
          </div>
          <div class="col-md-4">
            <p class="c-attributes-text">{{acfs.school_type}}</p>
          </div>
          <div class="col-md-2">
            <i class="c-attribute-icons fa fa-calendar fa-2x"></i>
          </div>
          <div class="col-md-4">
              <p class="c-attributes-text">{{acfs.duration}}</p>
          </div>
      </div>
      <div class="row">
        	<div class="col-md-2">
              <i class="c-attribute-icons fa fa-bed fa-2x"></i>
          </div>
          <div class="col-md-4"> 
            <p class="c-attributes-text">{{acfs.accommodation}}</p>
          </div>
          <div class="col-md-2">
              <i class="c-attribute-icons fa fa-users fa-2x"></i>
          </div>
          <div class="col-md-4">
              <p class="c-attributes-text">{{acfs.population}}</p>
          </div>
      </div>
      <div class="row">
        	<div class="col-md-2">
              {% if acfs.gender == "Only Boys" %}
                <i class="c-attribute-icons fa fa-male fa-2x"></i>
              {% endif %}
                {% if acfs.gender == "Only Girls" %}
                <i class=" c-attribute-icons fa fa-female fa-2x"></i>
              {% endif %}
              {% if acfs.gender == "Mixed" %}
                <i class="c-attribute-icons fa fa-male fa-2x"></i>
                <i class="c-attribute-icons fa fa-female fa-2x"></i>
              {% endif %}
          </div>
          <div class="col-md-4" >
              <p class="c-attributes-text">{{acfs.gender}}</p>
          </div>
          <div class="col-md-2">
              <i class="c-attribute-icons fa fa-book fa-2x"></i>
          </div>
          <div class="col-md-4">    
              <p class="c-attributes-text">{{acfs.focus}}</p>
          </div>
      </div>
      {# <div class="row">
        <div class="col-md-2">
              <i class="c-attribute-icons fa fa-eur fa-2x"></i>
          </div>
          <div class="col-md-4">
              <p class="c-attributes-text">{{acfs.price_range}}</p>
          </div>  
      </div> #}
  </div>
</div>


<div class="p-school__section">
	<p>{{acfs.general_description}}</p>
</div>


<div class="p-school__section">
  <ul class="c-group-ul" >
   {% for item in acfs.main_features %}
      <li>{{item.feature}}</li>
   {% endfor %} 
  </ul>
</div>

<div class="p-school__section">
	<div class="col-md-12">
	   {% for item in acfs.photos %}
		    <img class="p-galery__img" src="{{item.url}}" width="200px">
	   {% endfor %} 
	</div>
</div>


<div class="p-school__section">
	<h2 class="c-subtitle">Location</h2>
	     {{acfs.location}} 
</div>


<div class="p-school__section"> 
	<h2 class="c-subtitle">Fees</h2>	
		{{acfs.fees}} 
</div>


<div class="p-school__section"> 
  <div class="row">
    <div class="col-md-6" >
       <a href="http://localhost:8888/Highschool/contact/" class="btn btn-primary btn-justified" title="Contact us today"> Contact us today!</a>
    </div>
    <div class="col-md-6" >
       <a href="http://localhost:8888/Highschool/enquire/" class="btn btn-primary btn-justified" title="Register">Want to Register? Click Here</a>
    </div>

  </div> 
</div>




