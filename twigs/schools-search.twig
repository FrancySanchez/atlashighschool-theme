<div class="container" ng-controller="filtersCtrl">
    <div class="panel">
    </div>
    <div class="row js-school-filters" ng-init="query = ''">
        <div class="col-xs">
            School type
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults({type: 'Public'})">Public</a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults({type: 'Private'})">Private</a>
                </li>
            </ul>
        </div>
        <div class="col-xs">
            Acommodation
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults({accommodation : 'Homestay'})">Homestay</a>
                </li>
                <li class="list-inline-item"> 
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults({accommodation :'Boarding School'})">Boarding School</a>
                </li>
            </ul>
        </div>
        <div class="col-xs">
            Gender
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults('Private')">Only boys
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults('Only girls')">Only girls
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults('Mixed')">Mixed
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-xs">
            Duration
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults('Year')">Year
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' ng-click="updateResults('Term')">Term
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <hr>
    <div class="row js-schools">
        <div class="col-md-3" ng-repeat="school in posts | filter:query ">
            <div class="card">
                <div class="card-block">
                    <h3 class="c-card-title"> 
                        <a href="{[school.link]}" class="card-link" title="View school">
                            {[school.title.rendered]} 
                        </a>
                    </h3>
                </div>
                <ul class="list-group list-group-flush">
                    <li class=""> 
                        <span class="c-important">School type:</span> {[school.acf.school_type]}</li>
                    <li class="">
                        <span class="c-important">Accommodation:</span> {[school.acf.accommodation]}</li>
                    <li class="">
                        <span class="c-important">Gender:</span> {[school.acf.gender]}</li>
                    <li class="">
                        <span class="c-important">Duration:</span> {[school.acf.duration]}</li>
                    <li class="">
                        <span class="c-important">School Population:</span> {[school.acf.population]}</li>
                    <li class="">
                        <span class="c-important">Focus:</span> {[school.acf.focus]}</li>
                    <li class="">
                        <span class="c-important">Price Range:</span> {[school.acf.price_range]}</li>
                </ul>
                <div class="c-card__footer">
                    <a href="{[school.link]}" class="card-link" title="View school">View School</a>
                </div>
            </div>
        </div>
        {# {% for school in schools %}
        <div class="col-md-3 {{ school.ID}} js-type-{{ school.school_type|replace(' ', '-')|lower}}" ng-hide="">
            <div class="card">
                <a href="{{school.link}}" class="card-link" title="View school">
                    <img class=" c-card-head card-img-top" src="{{ school.featured_image|resize(300, 200)}}" width="100%" alt="Card image cap">
                </a>
                <div class="card-block">
                    <h3 class="c-card-title">
                        <a href="{{school.link}}" class="card-link" title="View school">{{school.post_title}}</a>
                    </h3>
                </div>
                <ul class="list-group list-group-flush">
                    <li class=""> <span class="c-important">School type:</span> {{ school.school_type}}</li>
                    <li class=""><span class="c-important">Accommodation:</span> {{ school.accommodation}}</li>
                    <li class=""><span class="c-important">Gender:</span> {{ school.gender}}</li>
                    <li class=""><span class="c-important">Duration:</span> {{ school.duration}}</li>
                    <li class=""><span class="c-important">School Population:</span> {{ school.population}}</li>
                    <li class=""><span class="c-important">Focus:</span> {{ school.focus}}</li>
                    <li class=""><span class="c-important">Price Range:</span> {{ school.price_range}}</li>
                </ul>
                <div class="c-card__footer">
                    <a href="{{school.link}}" class="card-link" title="View school">View School</a>
                </div>
            </div>
        </div>
        {% endfor %} #}
    </div>
</div>
