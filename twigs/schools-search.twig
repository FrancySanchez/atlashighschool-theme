<div class="container" >
    <div class="panel">
    </div>
    <div class="row js-school-filters">
        <div class="col-xs">
            School type
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="public" >Public
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="private" >Private
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-xs">
            Acommodation
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="homestay">Homestay
                    </a>
                </li>
                <li class="list-inline-item"> 
                    <a class='btn btn-secondary btn-sm' data-filter="boarding-school">Boarding School
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-xs">
            Gender
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="only-boys">Only boys
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="only-girls">Only girls
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="mixed">Mixed
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-xs">
            Duration
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="year">Year
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class='btn btn-secondary btn-sm' data-filter="term">Term
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <hr>
    <div class="row js-schools">
        
        {% for school in schools %}
        <div class="col-md-3 {{ school.ID}} js-school {{ school.accommodation|replace(' ', '-')|lower}} {{ school.gender|replace(' ', '-')|lower}} {{ school.duration|replace(' ', '-')|lower}}  {{ school.school_type|replace(' ', '-')|lower}}" >
            <div class="card">
                <a href="{{school.link}}" class="card-link" title="View school">
                    <img class=" c-card-head card-img-top" src="{{ school.featured_image|resize(300, 200)}}" width="100%" alt="Card image cap">
                </a>
                <div class="card-block">
                    <h3 class="c-card-title">
                        <a href="{{school.link}}" class="card-link" title="View school">{{school.post_title}}</a>
                    </h3>
                </div>
                <ul class="list-group list-group-flush">
                    <li class=""> <span class="c-important">School type:</span> {{ school.school_type}}</li>
                    <li class=""><span class="c-important">Accommodation:</span> {{ school.accommodation}}</li>
                    <li class=""><span class="c-important">Gender:</span> {{ school.gender}}</li>
                    <li class=""><span class="c-important">Duration:</span> {{ school.duration}}</li>
                    <li class=""><span class="c-important">School Population:</span> {{ school.population}}</li>
                    <li class=""><span class="c-important">Focus:</span> {{ school.focus}}</li>
                    <li class=""><span class="c-important">Price Range:</span> {{ school.price_range}}</li>
                </ul>
                <div class="c-card__footer">
                    <a href="{{school.link}}" class="card-link" title="View school">View School</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
